<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="homeRecentCollectionItem"
            type="com.example.fishingmanager.data.HomeRecentCollection" />

        <variable
            name="itemClickListener"
            type="com.example.fishingmanager.adapter.HomeRecentCollectionAdapter.ItemClickListener" />

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:onClick="@{() -> itemClickListener.onClick(homeRecentCollectionItem)}"
        >

        <ImageView
            android:id="@+id/homeRecentCollectionItemFishImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</layout>